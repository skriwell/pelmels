<% content_for :title do %><%= I18n.t 'devise.shared.links.forgot_your_password' %><% end %>
<% content_for :description, '' %>

<% content_for :body do %>
  <div class="row justify-content-md-center">
    <div class="col-sm-12 col-md-3">
      <h1><%= I18n.t('devise.shared.links.forgot_your_password') %></h1>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'mt-4' }) do |f| %>
        <%= devise_error_messages! %>

        <%= f.input :email, required: true %>

        <div class="actions">
          <%= f.button :submit, I18n.t('devise.passwords.new.send_me_reset_password_instructions'), class: 'btn-secondary mt-3 mb-4' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

